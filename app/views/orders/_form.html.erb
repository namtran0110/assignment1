<div class="container">
  <h1>Order for <%= @item.name %></h1>
  <%= form_for [@item, @order] do |f| %>
      <% if @order.errors.present? %>
          <div class="alert alert-danger"> <%= @order.errors.full_messages.to_sentence %></div>
      <% end %>
      <div class="form-group">
        <%= f.label :Quantity, class:"form_title" %>
        <%= f.number_field :quantity, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :Name, class:"form_title" %>
        <%= f.text_field :name , class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :Address, class:"form_title" %>
        <%= f.text_field :address , class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :"Phone Number", class:"form_title" %>
        <%= f.text_field :phone , class: 'form-control' %>
      </div>
      <%= f.submit nil, class: 'btn btn-primary' %>
  <% end %>
</div>
